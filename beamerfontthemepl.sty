\ProvidesPackage{beamerfontthemepl}

\RequirePackage{mathspec}
\defaultfontfeatures{Mapping=tex-text,Ligatures={TeX,Common},Scale=MatchLowercase}
\setmathfont(Digits,Latin,Greek){Fira Sans}
\setmainfont{Fira Sans}
\setmonofont{Fira Mono}

\let\varepsilon\epsilon
\let\varphi\phi

\setbeamerfont{title}{size=\Large, series=\bfseries}
\setbeamerfont{subtitle}{size=\large, series=\mdseries}
\setbeamerfont{author}{size=\small}
\setbeamerfont{institute}{size=\small}
\setbeamerfont{date}{size=\small}

\setbeamerfont{section title}{size=\normalsize, series=\mdseries}

\setbeamerfont{block title}{size=\normalsize}
\setbeamerfont{block title alerted}{size=\normalsize}

\setbeamerfont{frametitle}{size=\normalsize, series=\mdseries}

\setbeamerfont{caption}{size=\small}
\setbeamerfont{caption name}{size=\small, series=\bfseries}

\setbeamerfont{description item}{series=\bfseries}

\setbeamerfont{page number in head/foot}{size=\scriptsize}

\linespread{1.3}
