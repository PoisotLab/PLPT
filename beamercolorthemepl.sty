%{{{ --- Colors ---------------------

\definecolor{backgroundcolor}{HTML}{FCFCFC}
\definecolor{foregroundcolor}{HTML}{162228}

\definecolor{structurecolor}{HTML}{020304}
\definecolor{accentcolor}{HTML}{F57C00}
\definecolor{codecolor}{HTML}{03A9F4}

\setbeamercolor{palette primary}{fg=foregroundcolor, bg=backgroundcolor}
\setbeamercolor{palette secondary}{fg=foregroundcolor, bg=backgroundcolor}
\setbeamercolor{palette tertiary}{fg=structurecolor, bg=backgroundcolor}
\setbeamercolor{palette quaternary}{bg=foregroundcolor!15!backgroundcolor, fg=structurecolor!50!backgroundcolor}

\setbeamercolor{title}{parent=palette tertiary}
\setbeamercolor{subtitle}{parent=palette primary, fg=accentcolor!20}
\setbeamercolor{author}{parent=palette secondary}
\setbeamercolor{date}{parent=palette primary}
\setbeamercolor{institute}{parent=palette primary}

\setbeamercolor{structure}{fg=structurecolor}

\setbeamercolor{section title}{parent=palette primary, fg=accentcolor}
\setbeamercolor{frametitle}{fg=accentcolor!15!foregroundcolor}
\setbeamercolor{background canvas}{parent=palette primary}

\setbeamertemplate{background canvas}{%
   \ifnumequal{\c@framenumber}{0}{%
   \color{backgroundcolor}\rule{\paperwidth}{\paperheight}%
   }{%
      \ifnumequal{\c@framenumber}{\inserttotalframenumber}{
         % Last frame
         \color{backgroundcolor}\rule{\paperwidth}{\paperheight}
      }{%
         % Other frames
         \color{backgroundcolor}\rule{\paperwidth}{\paperheight}
      }%
   }%
}

\setbeamercolor{normal text}{fg=foregroundcolor}
\setbeamercolor{alerted text}{fg=accentcolor}

\setbeamercolor{footnote}{fg=structurecolor}
\setbeamercolor{footnote mark}{fg=.}
\setbeamercolor{page number in head/foot}{fg=structurecolor}

\if@beamer@pl@blockbg

\setbeamercolor{block title}{parent=palette primary,bg=palette primary.bg!80!fg}
\setbeamercolor{block title alerted}{use=alerted text,parent=palette primary,fg=alerted text.fg}
\setbeamercolor{block title example}{use=example text,parent=palette primary,fg=example text.fg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg}

\fi

\mode<all>
