%{{{ --- Colors ---------------------

\definecolor{plBG}{HTML}{FAFAFA}
\definecolor{plFG}{HTML}{263238}

\definecolor{plST}{HTML}{00796B}
\definecolor{plAC}{HTML}{F57C00}
\definecolor{plTT}{HTML}{03A9F4}

\setbeamercolor{palette primary}{fg=plFG, bg=plBG}
\setbeamercolor{palette secondary}{fg=plFG, bg=plBG}
\setbeamercolor{palette tertiary}{fg=plST, bg=plBG}
\setbeamercolor{palette quaternary}{bg=plFG!15!plBG, fg=plST!50!plBG}

\setbeamercolor{title}{parent=palette tertiary}
\setbeamercolor{subtitle}{parent=palette primary, fg=plAC}
\setbeamercolor{author}{parent=palette secondary}
\setbeamercolor{date}{parent=palette primary}
\setbeamercolor{institute}{parent=palette primary}

\setbeamercolor{structure}{fg=plST}

\setbeamercolor{section title}{parent=palette primary, fg=plAC}
\setbeamercolor{frametitle}{fg=plAC!15!plFG}
\setbeamercolor{background canvas}{parent=palette primary}

\setbeamertemplate{background canvas}{%
   \ifnumequal{\c@framenumber}{0}{%
   \color{plBG}\rule{\paperwidth}{\paperheight}%
   }{%
      \ifnumequal{\c@framenumber}{\inserttotalframenumber}{
         % Last frame
         \color{plBG}\rule{\paperwidth}{\paperheight}
      }{%
         % Other frames
         \color{plBG}\rule{\paperwidth}{\paperheight}
      }%
   }%
}

\setbeamercolor{normal text}{fg=plFG}
\setbeamercolor{alerted text}{fg=plAC}

\setbeamercolor{footnote}{fg=plST}
\setbeamercolor{footnote mark}{fg=.}
\setbeamercolor{page number in head/foot}{fg=plST}

\if@beamer@pl@blockbg

\setbeamercolor{block title}{parent=palette primary,bg=palette primary.bg!80!fg}
\setbeamercolor{block title alerted}{use=alerted text,parent=palette primary,fg=alerted text.fg}
\setbeamercolor{block title example}{use=example text,parent=palette primary,fg=example text.fg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg}

\fi

\mode<all>
